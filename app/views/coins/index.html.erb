<p id="notice"><%= notice %></p>

<h1>----Moedas----</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Sigla</th>
      <th>Url imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.descricao %></td>
        <td><%= coin.acronimo %></td>
        <td><%= image_tag coin.url_imagem, width:50, height:50 %> </td>
        <td><%= link_to 'Consultar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Deletar', coin, method: :delete, data: { confirm: 'Confirma Deleção?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button> <%= link_to 'Nova Moeda', new_coin_path %>  </button>
